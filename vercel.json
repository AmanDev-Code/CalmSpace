{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/(.*).apk",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/vnd.android.package-archive"
        },
        {
          "key": "Content-Disposition",
          "value": "attachment; filename=calmspace.apk"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/app-release.apk",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/vnd.android.package-archive"
        },
        {
          "key": "Content-Disposition",
          "value": "attachment; filename=calmspace.apk"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/.well-known/assetlinks.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/manifest.webmanifest",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    {
      "source": "/check-assetlinks.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, must-revalidate"
        }
      ]
    },
    {
      "source": "/verify-technical-files.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/.well-known/(.*)",
      "destination": "/.well-known/$1"
    },
    {
      "source": "/manifest.webmanifest",
      "destination": "/manifest.webmanifest"
    },
    {
      "source": "/workbox-(.*)",
      "destination": "/workbox-$1"
    },
    {
      "source": "/sw.js",
      "destination": "/sw.js"
    },
    {
      "source": "/check-assetlinks.html",
      "destination": "/check-assetlinks.html"
    },
    {
      "source": "/verify-technical-files.html",
      "destination": "/verify-technical-files.html"
    },
    {
      "source": "/((?!api/|.well-known/|manifest.webmanifest|workbox-|sw.js|check-assetlinks.html|verify-technical-files.html).*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.well-known/assetlinks.json", "dest": "/.well-known/assetlinks.json", "status": 200 },
    { "src": "/manifest.webmanifest", "dest": "/manifest.webmanifest", "status": 200 },
    { "src": "/sw.js", "dest": "/sw.js", "status": 200 },
    { "src": "/workbox-(.*)", "dest": "/workbox-$1", "status": 200 },
    { "src": "/check-assetlinks.html", "dest": "/check-assetlinks.html", "status": 200 },
    { "src": "/verify-technical-files.html", "dest": "/verify-technical-files.html", "status": 200 },
    { "src": "/(.*)", "dest": "/index.html", "status": 200 }
  ]
} 